{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./src/types","./node_modules/@types"],
    "types": ["jest"],
    "baseUrl": "./src",
    "paths": {
      "@middlewares/*": ["middlewares/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@routes/*": ["routes/*"],
      "@constants/*": ["constants/*"],
      "@libs/*": ["libs/*"],
      "@models/*": ["models/*"],
      "@controllers/*": ["controllers/*"],
      "@validators/*": ["validators/*"],
      "@services/*": ["services/*"],
    }
  },
  "include": ["src/**/*","tests/**/*"],
  "exclude": ["node_modules"]
}