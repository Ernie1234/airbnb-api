{
  "env": {
    "es2021": true,
    "node": true,
    "browser": true,
    "commonjs": true
  },
   "extends": [
    "airbnb-base",
    "plugin:@typescript-eslint/recommended",
    "plugin:unicorn/recommended",
    "plugin:sonarjs/recommended-legacy"
  ],
  "plugins": ["jest", "prettier","@typescript-eslint", "unicorn", "sonarjs"],
   "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
      "linebreak-style": "off",
    "no-console": "error",
    "comma-dangle": "off",
    "unicorn/prevent-abbreviations": "off",
    "import/extensions": "off",
    "object-curly-newline": "off",
    "no-underscore-dangle": "off"
  },
   "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts"]
      },
      "typescript": {}
    }
  }
}